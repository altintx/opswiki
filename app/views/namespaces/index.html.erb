<h1>Listing Namespaces</h1>
 
<% if current_user %>
<table>
  <tr>
    <th class="span3">Name</th>
    <th class="span1"></th>
    <th class="span1"></th>
    <th class="span1"></th>
  </tr>
 
<% @namespaces.each do |namespace| %>
  <tr>
    <td><%= namespace.name %></td>
    <td><%= link_to "Edit", edit_namespace_path(namespace) %></td>
    <td><%= link_to "Remove", namespace, method: :delete, data: { confirm: "Are you sure?" } %></td>
    <td><%= link_to "Permissions", permissions_path(:namespace => namespace) %></td>
  </tr>
<% end %>
</table>
 
<br />
 
<%= link_to "New namespace", new_namespace_path %>

<% else %>

<%= render partial: "shared/denied", locals: { namespace: nil } %>

<% end %>